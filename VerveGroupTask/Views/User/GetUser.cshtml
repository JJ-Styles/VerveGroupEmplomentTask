@model VerveGroupTask.Web.Services.UserDTO

@{
    ViewData["Title"] = "GetUser";
}

<h1>Search User</h1>
@using (Html.BeginForm("GetUser", "User", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.Name)
    <button type="submit">Search</button>
}

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Avatar)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Avatar)
        </dd>
    </dl>
</div>