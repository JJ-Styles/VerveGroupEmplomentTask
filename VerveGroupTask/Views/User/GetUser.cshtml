@model IEnumerable<VerveGroupTask.Web.Services.RepoDTO>

@{
    ViewData["Title"] = "GetUser";
}

<h1>Search User</h1>
@using (Html.BeginForm("GetUser", "User", FormMethod.Post))
{
    @Html.TextBoxFor(x => x.First().Owner.Name)
    <button type="submit">Search</button>
}

<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().Owner.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Owner.Name)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().Owner.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Owner.Location)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.First().Owner.Avatar_Url)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.First().Owner.Avatar_Url)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelitem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Full_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelitem => item.Description)
                </td>
            </tr>
        }
    </tbody>
</table>